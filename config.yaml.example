# Docker 主机配置
# 用于管理远程浏览器容器，可以配置多个 Docker 主机以实现分布式部署
docker_hosts:
  - name: 本地 Docker
    url: unix:///var/run/docker.sock
    max_containers: 2  # 每个主机最多同时运行的浏览器容器数量

# 浏览器镜像
# 使用 headless Chrome 镜像进行自动化操作
browser_image: chromedp/headless-shell:latest

# 浏览器后端
# 支持 docker（容器化浏览器）或 local（本地浏览器，仅开发环境）
browser_backend: docker

# 数据库备份配置
backup:
  # 备份目录（Docker 环境下使用持久化路径）
  directory: /app/data/backups
  # 自动备份间隔（秒），86400 = 24小时
  auto_backup_interval: 86400
  # 备份保留天数
  keep_days: 7

# Sub2API 实例配置（可选）
# 用于管理 ChatGPT 订阅转 API 服务
# 示例:
# sub2api_instances:
#   - url: http://localhost:3000
#     email: user@example.com
#     password: your-password
sub2api_instances: []

# Sora2API 实例配置（可选）
# 用于管理 Sora 视频生成 API 服务
# 示例:
# sora2api_instances:
#   - url: http://localhost:3001
#     email: user@example.com
#     password: your-password
sora2api_instances: []
